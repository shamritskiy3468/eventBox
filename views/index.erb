  <% @days.each do |index, day| %>
  <div class="modal fade" id="exampleModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  	<div class="modal-dialog" role="document">
  		<div class="modal-content">
  			<div class="modal-header">
  					<button type="button" class="p-1 btn btn-danger" data-dismiss="modal" aria-label="Close">
  						<span aria-hidden="true">&times;</span>
  					</button>
  				<h2 class="modal-title" id="exampleModalLabel">Мероприятия на сегодня</h2>
  			</div>
  			<% day.each do |elem| %>
  			<div class="modal-body">
  			<a  href = "/account/<%= elem['created_id'] %>">Создатель мероприятия</a>
  				<p><b>Мероприятие: </b> <%= elem['title'] %></p>
  				<p><b>Когда: </b> <%= elem['start'] %>:00 - <%= elem['finish'] %>:00</p>
  				<a type="button" class="btn btn-primary btn-sm" href = "/going/<%= elem['id'] %>">Подробнее</a>
  			</div>
  			<% end %>
  			<div class="modal-footer">
  				<button type="button" class="btn btn-danger" data-dismiss="modal">Назад</button>
  				<a href = "/create_going/<%= index %>" class="btn btn-primary">Создать мероприятие</a>
  			</div>
  		</div>
  	</div>
  </div>
   <% end %>
